        <activity
            android:name=".caching.ui.ListServicesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".push.ui.InstalledApplcationListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ondemand.ui.ODProvisioningActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ondemand.ui.ModulesList"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.PairingActivity"
            android:label="@string/title_activity_pairing" >
        </activity>

        <service
            android:name=".ska.adb.SaveIdToFileService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".ska.adb.StoreServerCertificateService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".ska.adb.StoreMasterKeyService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".ska.adb.StoreDeviceKeyService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".ska.adb.StoreDeviceCertificateService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".ska.adb.StoreNetworkIdService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
